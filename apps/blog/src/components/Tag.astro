---
import IconHash from "@/assets/icons/IconHash.svg";

type Props = {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
};

const { tag, tagName, size = "lg" } = Astro.props;
---

<li>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "flex items-center gap-0.5",
      "bg-gray-200 dark:bg-gray-600 dark:text-white px-1 rounded-lg border-foreground",
      "hover:border-accent hover:text-accent",
      "focus-visible:border-none focus-visible:text-accent",
      { "text-sm": size === "sm" },
      { "text-lg": size === "lg" },
    ]}
  >
    <IconHash
      class:list={[
        "opacity-80",
        { "size-4": size === "lg" },
        { "size-3": size === "sm" },
      ]}
    />
    {tagName}
  </a>
</li>
